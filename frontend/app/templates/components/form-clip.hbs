<form class="w-full max-w-md container w-full m-auto pt-16 px-2 flex flex-col items-center">
  <div class="w-full h-2"></div>
  {{#if model.id}}
  <div class="w-full flex justify-end p-2">
    <div class="p-4 rounded bg-grey hover:bg-red text-white flex-no-grow cursor-pointer" onclick={{perform del}}>
      {{#if del.isRunning}}
        {{fa-icon "circle-o-notch" spin=true}}
      {{else}}
        {{fa-icon "trash"}}
      {{/if}}
    </div>
  </div>
  <div class="w-full disabled">
    <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="grid-first-name">
      Id
    </label>
    {{input class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="text" value=model.id}}
  </div>
  {{else}}
  <div class="w-full h-8"></div>
  {{/if}}
  <div class="w-full">
    <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="grid-first-name">
      Title
    </label>
    {{input class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="text" value=model.title}}
  </div>
  <div class="w-full">
    <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="grid-first-name">
      image
    </label>
    {{input class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="text" value=model.image}}
  </div>
  <div class="w-full">
    <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="grid-first-name">
      video
    </label>
    {{input class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="text" value=model.video}}
  </div>
  <div class="w-full">
    <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="grid-first-name">
      date
    </label>
    {{input class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="text" value=model.date}}
  </div>
  <div class="w-full">
    <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="grid-first-name">
      description
    </label>
    {{textarea rows=10 class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="text" value=model.description}}
  </div>
  <button class="w-full shadow bg-blue-dark hover:bg-black-light focus:shadow-outline focus:outline-none text-white font-bold p-4 rounded" type="button" onclick={{perform save}}>
    {{if save.isRunning 'Loading...' saveName}}
  </button>
</form>
